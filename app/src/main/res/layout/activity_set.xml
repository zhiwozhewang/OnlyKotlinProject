<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/set_fr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_92"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/set_back"
            android:layout_width="@dimen/dp_88"
            android:layout_height="@dimen/dp_88"
            android:layout_gravity="left|center_vertical"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/set_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_36" />
    </FrameLayout>

    <com.enn.ionic.ui.view.MineItemView
        android:id="@+id/set_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_24"
        app:itemize_background="@mipmap/im_bg_mine_item"
        app:itemize_leftImage_isshow="false"
        app:itemize_rightImage_isshow="true"
        app:itemize_rightText_color="@color/color_666666"
        app:itemize_text="账号与安全"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_fr" />

    <com.enn.ionic.ui.view.MineItemView
        android:id="@+id/set_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:visibility="gone"
        app:itemize_leftImage_isshow="false"
        app:itemize_rightImage_isshow="true"
        app:itemize_rightText_color="@color/color_666666"
        app:itemize_text="消息通知设置"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_account" />

    <com.enn.ionic.ui.view.MineItemView
        android:id="@+id/set_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:visibility="gone"
        app:itemize_leftImage_isshow="false"
        app:itemize_rightImage_isshow="true"
        app:itemize_rightText_color="@color/color_666666"
        app:itemize_text="清楚缓存"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_message" />

    <com.enn.ionic.ui.view.MineItemView
        android:id="@+id/set_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        app:itemize_background="@mipmap/im_bg_mine_item"
        app:itemize_leftImage_isshow="false"
        app:itemize_rightImage_isshow="true"
        app:itemize_rightText_color="@color/color_666666"
        app:itemize_text="关于"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_cache" />


    <TextView
        android:id="@+id/set_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/bg_loginout_btn"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="@color/color_0473FF"
        android:textSize="@dimen/sp_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>