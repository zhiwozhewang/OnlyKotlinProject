<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/dp_880">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardBackgroundColor="@null"
        app:cardElevation="0dp"
        android:layout_marginTop="@dimen/dp_39"
        app:cardCornerRadius="@dimen/dp_30"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_width="@dimen/dp_608"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="@dimen/dp_40"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_275"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_40"
                    android:text="好气网全面升级"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tv_version"
                    android:paddingHorizontal="@dimen/dp_15"
                    android:textStyle="bold"
                    android:background="@drawable/bg_round_corner_righttop_leftbottom"
                    android:layout_marginStart="@dimen/dp_8"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_remark"
                android:textSize="@dimen/sp_32"
                android:textColor="@color/black"
                android:layout_marginHorizontal="@dimen/dp_48"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tv_update"
                android:layout_gravity="center_horizontal"
                android:text="去升级"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_round_corner_update"
                android:textSize="@dimen/sp_36"
                android:textColor="@color/white"
                android:layout_width="@dimen/dp_516"
                android:layout_height="@dimen/dp_88"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_608"
        android:layout_height="@dimen/dp_263"
        android:src="@mipmap/bg_update" />


    <ImageView
        android:id="@+id/img_close"
        android:layout_marginTop="@dimen/dp_56"
        android:layout_below="@+id/card_view"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/dp_64"
        android:layout_height="@dimen/dp_64"
        android:src="@mipmap/icon_close" />

</RelativeLayout>