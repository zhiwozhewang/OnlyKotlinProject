<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom">

    <View
        android:id="@+id/dialog_pic_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_380"
        android:background="@drawable/bg_top_round_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dialog_pic_takepic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_30"
        android:text="拍照"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_32"
        app:layout_constraintEnd_toEndOf="@+id/dialog_pic_view"
        app:layout_constraintStart_toStartOf="@+id/dialog_pic_view"
        app:layout_constraintTop_toTopOf="@+id/dialog_pic_view" />

    <View
        android:id="@+id/dialog_pic_takepic_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:background="@color/EAECF5"
        app:layout_constraintEnd_toEndOf="@+id/dialog_pic_view"
        app:layout_constraintStart_toStartOf="@+id/dialog_pic_view"
        app:layout_constraintTop_toBottomOf="@+id/dialog_pic_takepic" />

    <TextView
        android:id="@+id/dialog_pic_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_30"
        android:text="从相册中选择"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_32"
        app:layout_constraintEnd_toEndOf="@+id/dialog_pic_view"
        app:layout_constraintStart_toStartOf="@+id/dialog_pic_view"
        app:layout_constraintTop_toBottomOf="@+id/dialog_pic_takepic_view" />

    <View
        android:id="@+id/dialog_pic_local_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/F5F6FF"
        app:layout_constraintEnd_toEndOf="@+id/dialog_pic_view"
        app:layout_constraintStart_toStartOf="@+id/dialog_pic_view"
        app:layout_constraintTop_toBottomOf="@+id/dialog_pic_local" />

    <TextView
        android:id="@+id/dialog_pic_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dp_30"
        android:text="取消"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_32"
        app:layout_constraintEnd_toEndOf="@+id/dialog_pic_view"
        app:layout_constraintStart_toStartOf="@+id/dialog_pic_view"
        app:layout_constraintTop_toBottomOf="@+id/dialog_pic_local_view" />


</androidx.constraintlayout.widget.ConstraintLayout>
