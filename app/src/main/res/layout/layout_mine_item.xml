<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_120">

    <ImageView
        android:id="@+id/item_mine_im"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_marginLeft="@dimen/dp_34"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_mine_text"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:gravity="left"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_32"
        app:layout_constraintBottom_toBottomOf="@+id/item_mine_im"
        app:layout_constraintEnd_toStartOf="@+id/item_mine_text_right"
        app:layout_constraintStart_toEndOf="@+id/item_mine_im"
        app:layout_constraintTop_toTopOf="@id/item_mine_im"
        app:layout_goneMarginLeft="@dimen/dp_25" />

    <View
        android:id="@+id/item_mine_line"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_1"
        android:background="@color/E5E5E5"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_mine_text" />

    <TextView
        android:id="@+id/item_mine_text_right"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_34"
        android:gravity="left|center_vertical"
        android:paddingTop="@dimen/dp_30"
        android:paddingBottom="@dimen/dp_30"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_mine_im_to"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_mine_text_num"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_34"
        android:background="@drawable/bg_red_circle"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_20"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/item_mine_im_to"
        app:layout_constraintEnd_toStartOf="@+id/item_mine_im_to"
        app:layout_constraintTop_toTopOf="@id/item_mine_im_to" />

    <ImageView
        android:id="@+id/item_mine_im_to"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:src="@mipmap/im_mine_to"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>