<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal">

    <View
        android:id="@+id/dialog_tophone_view"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_110"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_60"
        android:background="@drawable/bg_round_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dialog_tophone_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_0473FF"
        android:textSize="@dimen/sp_40"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_tophone_view"
        app:layout_constraintEnd_toEndOf="@id/dialog_tophone_view"
        app:layout_constraintStart_toStartOf="@+id/dialog_tophone_view"
        app:layout_constraintTop_toTopOf="@+id/dialog_tophone_view" />

    <View
        android:id="@+id/dialog_tophone_view2"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_110"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/bg_round_corner"
        app:layout_constraintBottom_toTopOf="@+id/dialog_tophone_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/dialog_tophone_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_007AFF"
        android:textSize="@dimen/sp_40"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_tophone_view2"
        app:layout_constraintEnd_toEndOf="@+id/dialog_tophone_view"
        app:layout_constraintStart_toStartOf="@+id/dialog_tophone_view"
        app:layout_constraintTop_toTopOf="@+id/dialog_tophone_view2" />

    <ImageView
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@mipmap/im_phone"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_tophone_content"
        app:layout_constraintEnd_toStartOf="@+id/dialog_tophone_content"
        app:layout_constraintTop_toTopOf="@+id/dialog_tophone_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
