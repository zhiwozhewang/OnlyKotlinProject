<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/account_fr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_92"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/account_back"
            android:layout_width="@dimen/dp_88"
            android:layout_height="@dimen/dp_88"
            android:layout_gravity="left|center_vertical"
            android:src="@mipmap/icon_back" />

        <TextView
            android:id="@+id/account_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="账号与安全"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_36" />
    </FrameLayout>

    <com.enn.ionic.ui.view.MineItemView
        android:id="@+id/account_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_24"
        app:itemize_background="@mipmap/im_bg_mine_item"
        app:itemize_leftImage_isshow="false"
        app:itemize_rightImage_isshow="true"
        app:itemize_rightText_color="@color/color_666666"
        app:itemize_text="审核"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_fr" />

    <com.enn.ionic.ui.view.MineItemView
        android:id="@+id/account_unbind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        app:itemize_background="@mipmap/im_bg_mine_item"
        app:itemize_leftImage_isshow="false"
        app:itemize_rightImage_isshow="true"
        app:itemize_rightText_color="@color/color_666666"
        app:itemize_text="解除绑定"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_check" />

    <com.enn.ionic.ui.view.MineItemView
        android:id="@+id/account_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        app:itemize_background="@mipmap/im_bg_mine_item"
        app:itemize_leftImage_isshow="false"
        app:itemize_rightImage_isshow="true"
        app:itemize_rightText_color="@color/color_666666"
        app:itemize_text="转让主账号"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_unbind" />

    <com.enn.ionic.ui.view.MineItemView
        android:id="@+id/account_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        android:visibility="gone"
        app:itemize_background="@mipmap/im_bg_mine_item"
        app:itemize_leftImage_isshow="false"
        app:itemize_rightImage_isshow="true"
        app:itemize_rightText_color="@color/color_666666"
        app:itemize_text="更换登录账号"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_transfer" />

    <com.enn.ionic.ui.view.MineItemView
        android:id="@+id/account_lostpw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        android:visibility="gone"
        app:itemize_background="@mipmap/im_bg_mine_item"
        app:itemize_leftImage_isshow="false"
        app:itemize_rightImage_isshow="true"
        app:itemize_rightText_color="@color/color_666666"
        app:itemize_text="忘记密码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_change" />

    <com.enn.ionic.ui.view.MineItemView
        android:id="@+id/account_changepw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_24"
        android:visibility="gone"
        app:itemize_background="@mipmap/im_bg_mine_item"
        app:itemize_leftImage_isshow="false"
        app:itemize_rightImage_isshow="true"
        app:itemize_rightText_color="@color/color_666666"
        app:itemize_text="修改密码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/account_lostpw" />


    <TextView
        android:id="@+id/account_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_88"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginBottom="@dimen/dp_24"
        android:background="@drawable/bg_login_btn"
        android:gravity="center"
        android:text="绑定其他公司"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>